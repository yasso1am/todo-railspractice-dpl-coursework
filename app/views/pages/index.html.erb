<h1> Todo List <h1>
  <p> <%= link_to 'New Todo', new_page_path %> </p>
<ul>
<% @pages.each do |page| %>
  <h4>
  <li><%= link_to "#{page.todo}", page_path(page) %></li>
  </h4>
  <h6>
  <%= link_to 'Edit todo', edit_page_path(page) %>
  </h6>
  <h6>
  <%= link_to 'Destroy todo', page, method: :delete %>
  </h6>
<% end %>
</ul>
